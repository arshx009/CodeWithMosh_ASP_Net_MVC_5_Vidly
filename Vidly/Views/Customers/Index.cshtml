@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customer</h2>

<a href="@Url.Action("New")" class="btn btn-primary"><i class="glyphicon glyphicon-star"> New</i></a>

<hr />

@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover" id="customers">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Details", new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", new {@customer.Id})" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                        <button data-customer-id="@customer.Id" class="btn btn-sm btn-danger js-delete"><i class="glyphicon glyphicon-trash"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>We don't have any customers yet.</p>
}


@section scripts
{
    <script>
        $("#customers .js-delete").on('click',
            function () {
                var button = $(this);

                bootbox.confirm("Are you sure to delete this customer?", function (result) {
                    if (result) {
                        $.ajax(
                            {
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function () {
                                    button.parents("tr").remove();
                                }
                            }
                        );
                    }
                });
            }
        );
    </script>
}
